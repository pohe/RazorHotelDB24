@page
@using RazorHotelDB24.Models;
@model RazorHotelDB24.Pages.Rooms.CreateModel
@{
    ViewData["Title"] = "Create a Room";
}

<h1>Create a room for hotel </h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="None " class="text-danger">
            </div>
            <div class="form-group">
                <label asp-for="@Model.Room.HotelNr" class="control-label"></label>
                <input readonly asp-for="@Model.HotelNr" class="form-control" />
                <span asp-validation-for="@Model.Room.HotelNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Room.RoomNr" class="control-label"></label>
                <input asp-for="@Model.Room.RoomNr" class="form-control" />
                <span asp-validation-for="@Model.Room.RoomNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Room.Types" class="control-label"></label>
                <select asp-for="@Model.TheRoomType" asp-items="Html.GetEnumSelectList<RoomType>()" class="form-control">
                </select>
            </div>
            @*<div class="form-group">
            <label asp-for="@Model.Room.Types" class="control-label"></label>
            <input asp-for="@Model.Room.Types" class="form-control" />
            <span asp-validation-for="@Model.Room.Types" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <label asp-for="@Model.Room.Pris" class="control-label"></label>
                <input asp-for="@Model.Room.Pris" class="form-control" />
                <span asp-validation-for="@Model.Room.Pris" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        @* <div class="@(Model.createResult ? "alert alert-warning": "alert alert-danger")" role="alert">
        @(Model.createResult ? "Oprettelse ok" : "Fejl i oprettelse")
        </div>*@
        <p>
            <a asp-page="/Rooms/GetAllRooms" asp-page-handler="MyRooms" asp-route-cid="@Model.HotelNr">Back to rooms in hotel</a>
        </p>
    </div>
</div>
