@page
@model RazorHotelDB24.Pages.Hotels.DeleteModel
@{
    ViewData["Title"] = "Delete a hotel";
}
<h1>Do you wnat to delete this hotel?</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.HotelToDelete.HotelNr" class="control-label"></label>
                <input readonly asp-for="@Model.HotelToDelete.HotelNr" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HotelToDelete.Navn" class="control-label"></label>
                <input readonly asp-for="@Model.HotelToDelete.Navn" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.HotelToDelete.Adresse" class="control-label"></label>
                <input readonly asp-for="@Model.HotelToDelete.Adresse" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
