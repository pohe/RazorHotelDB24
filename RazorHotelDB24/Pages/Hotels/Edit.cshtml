@page
@model RazorHotelDB24.Pages.Hotels.EditModel
@{
    ViewData["Title"] = "Edit hotel";
}
<h1>Edit hotel</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.HotelToUpdate.HotelNr" class="control-label"></label>
                <input asp-for="@Model.HotelToUpdate.HotelNr" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.HotelToUpdate.Navn" class="control-label"></label>
                <input asp-for="@Model.HotelToUpdate.Navn" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="@Model.HotelToUpdate.Adresse" class="control-label"></label>
                <input asp-for="@Model.HotelToUpdate.Adresse" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>